{
  "name": "@tecsinapse/design-system",
  "private": true,
  "license": "MIT",
  "dependencies": {
    "@emotion/native": "~11.11.0",
    "@emotion/react": "~11.11.0",
    "@emotion/styled": "~11.11.0",
    "autoprefixer": "^10.4.16",
    "date-fns": "~2.30.0",
    "postcss": "^8.4.35",
    "tailwindcss": "^3.3.5",
    "react-native-vector-icons": "^9.2.0"
  },
  "devDependencies": {
    "@rollup/plugin-alias": "^5.0.0",
    "@storybook/addon-actions": "^7.4.4",
    "@storybook/addon-backgrounds": "^7.4.4",
    "@storybook/addon-controls": "^7.4.4",
    "@storybook/addon-docs": "^7.4.4",
    "@storybook/addon-storysource": "^7.4.4",
    "@storybook/addon-viewport": "^7.4.4",
    "@storybook/addons": "^7.4.4",
    "@storybook/builder-vite": "^7.4.4",
    "@storybook/client-api": "^7.4.4",
    "@storybook/react": "^7.4.4",
    "@storybook/react-vite": "^7.4.4",
    "@types/react": "~18.0.38",
    "@types/react-native-vector-icons": "^6.4.16",
    "@types/react-transition-group": "^4.4.5",
    "@typescript-eslint/eslint-plugin": "^6.9.0",
    "@typescript-eslint/parser": "^6.9.0",
    "@vitejs/plugin-react-swc": "^3.3.2",
    "cross-env": "^7.0.3",
    "esbuild": "^0.19.3",
    "eslint": "^8.52.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-import": "^2.29.0",
    "eslint-plugin-prettier": "^5.0.1",
    "eslint-plugin-react": "^7.33.2",
    "husky": "^9",
    "lerna": "^8",
    "lint-staged": "^15",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.2.5",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "react-native": "0.72.6",
    "react-native-web": "^0.19.9",
    "rimraf": "^5.0.5",
    "rollup": "^3.29.2",
    "rollup-plugin-esbuild": "^5.0.0",
    "storybook": "^7.4.4",
    "typescript": "^5",
    "vite": "^4.5.2"
  },
  "scripts": {
    "dev": "lerna run dev,dev:dts",
    "build": "lerna run build:es,build:dts",
    "build:core": "lerna run --scope @tecsinapse/react-core build:es,build:dts",
    "build:platform": "lerna run --ignore @tecsinapse/react-core build:es,build:dts",
    "storybook": "cross-env STORYBOOK_FONT_URL='' storybook dev -p 7007",
    "build:storybook": "rimraf -rf sbdocs/ && cross-env STORYBOOK_FONT_URL='/design-system' storybook build -o sbdocs/",
    "yalc:push": "lerna run yalc:push",
    "yalc:show": "yalc installations show",
    "rm:dts": "rimraf -rf packages/*/dist/*.d.ts",
    "rm:dist": "rimraf -rf packages/*/dist/",
    "lint:ts": "eslint 'packages/**/*.ts{,x}'",
    "lint": "pnpm lint:fix:quiet",
    "lint:fix": "pnpm lint:ts --fix-dry-run",
    "lint:fix:quiet": "pnpm lint:ts --fix --quiet",
    "prettify": "prettier --write ./**/*.{ts,tsx,json} && prettier --write *.{ts,tsx,json}",
    "bootstrap": "pnpm build",
    "tsc": "tsc",
    "prepare": "husky install && pnpm bootstrap"
  },
  "engines": {
    "node": ">=16"
  },
  "lint-staged": {
    ".{ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ]
  }
}
