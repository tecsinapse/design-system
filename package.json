{
  "name": "@tecsinapse/design-system",
  "private": true,
  "license": "MIT",
  "workspaces": {
    "packages": [
      "packages/*"
    ]
  },
  "dependencies": {
    "@emotion/native": "^11.0.0",
    "@emotion/react": "^11.4.1",
    "@emotion/styled": "^11.3.0",
    "date-fns": "^2.22.1",
    "react-native-vector-icons": "^9.2.0"
  },
  "devDependencies": {
    "@babel/cli": "^7.15.4",
    "@babel/core": "^7.15.5",
    "@babel/preset-env": "^7.15.6",
    "@babel/preset-react": "^7.14.5",
    "@babel/preset-typescript": "^7.15.0",
    "@storybook/addon-actions": "^6.5.5",
    "@storybook/addon-backgrounds": "^6.5.5",
    "@storybook/addon-controls": "^6.5.5",
    "@storybook/addon-docs": "^6.5.5",
    "@storybook/addon-storysource": "^6.5.5",
    "@storybook/addon-viewport": "^6.5.5",
    "@storybook/addons": "^6.5.5",
    "@storybook/builder-webpack5": "^6.5.5",
    "@storybook/client-api": "^6.5.5",
    "@storybook/manager-webpack5": "^6.5.5",
    "@storybook/react": "^6.5.5",
    "@types/react": "^17.0.3",
    "@types/react-dom": "^17.0.3",
    "@types/react-native": "^0.64.4",
    "@types/react-native-vector-icons": "^6.4.10",
    "@types/react-transition-group": "^4.4.2",
    "@typescript-eslint/eslint-plugin": "^4.21.0",
    "@typescript-eslint/parser": "^4.21.0",
    "babel-core": "^7.0.0-bridge.0",
    "babel-plugin-module-resolver": "^4.1.0",
    "babel-plugin-react-native-web": "^0.17.7",
    "cross-env": "^7.0.3",
    "eslint": "^7.24.0",
    "eslint-config-prettier": "^8.1.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-prettier": "^3.3.1",
    "eslint-plugin-react": "^7.23.2",
    "husky": "^4.3.8",
    "lerna": "^4.0.0",
    "lint-staged": "^10.5.4",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.2.1",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-native": "^0.64.0",
    "react-native-web": "^0.17.7",
    "rimraf": "^3.0.2",
    "typescript": "^4.2.3",
    "url-loader": "^4.1.1",
    "webpack": "5"
  },
  "scripts": {
    "start": "lerna run --parallel start --stream",
    "build": "lerna run --stream 'build:es'",
    "build:watch": "yarn start",
    "storybook": "cross-env STORYBOOK_FONT_URL='' start-storybook -p 7007",
    "build:storybook": "rimraf -rf sbdocs/ && cross-env STORYBOOK_FONT_URL='/design-system' build-storybook -o sbdocs/",
    "postbuild": "yarn build:declarations",
    "build:declarations": "lerna run --parallel 'build:declaration'",
    "build:declarations:watch": "rimraf -rf packages/*/dist/*.d.ts && lerna run --parallel 'build:declaration:watch' --stream",
    "yalc:push": "lerna run --parallel 'yalc:push'",
    "yalc:show": "yalc installations show",
    "prebuild": "rimraf -rf packages/*/dist/",
    "lint:ts": "eslint 'packages/**/*.ts{,x}'",
    "lint": "run-p -c lint:fix",
    "lint:fix": "yarn lint:ts --fix",
    "prettify": "prettier --write ./**/*.{ts,tsx,json} && prettier --write *.{ts,tsx,json}",
    "prepublish": "yarn build",
    "bootstrap": "yarn build",
    "tsc": "tsc"
  },
  "resolutions": {
    "babel-core": "^7.0.0-bridge.0"
  },
  "engines": {
    "node": ">=14"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "post-commit": "git update-index --again"
    }
  },
  "lint-staged": {
    ".{ts,tsx}": [
      "yarn lint",
      "yarn prettify",
      "git add ."
    ]
  }
}
