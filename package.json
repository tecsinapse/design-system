{
  "name": "@tecsinapse/design-system",
  "private": true,
  "license": "MIT",
  "workspaces": {
    "packages": [
      "packages/*"
    ]
  },
  "dependencies": {
    "@emotion/native": "~11.10.0",
    "@emotion/react": "~11.10.0",
    "@emotion/styled": "~11.10.0",
    "date-fns": "~2.29.3",
    "react-native-vector-icons": "~9.2.0"
  },
  "devDependencies": {
    "@rollup/plugin-alias": "^4.0.2",
    "@storybook/addon-actions": "next",
    "@storybook/addon-backgrounds": "next",
    "@storybook/addon-controls": "next",
    "@storybook/addon-docs": "next",
    "@storybook/addon-storysource": "next",
    "@storybook/addon-viewport": "next",
    "@storybook/addons": "next",
    "@storybook/builder-vite": "next",
    "@storybook/client-api": "next",
    "@storybook/react": "next",
    "@storybook/react-vite": "next",
    "@types/react": "^18.0.26",
    "@types/react-dom": "^18.0.10",
    "@types/react-native": "^0.70.8",
    "@types/react-native-vector-icons": "^6.4.12",
    "@types/react-transition-group": "^4.4.5",
    "@typescript-eslint/eslint-plugin": "^5.48.0",
    "@typescript-eslint/parser": "^5.48.0",
    "@vitejs/plugin-react-swc": "^3.0.1",
    "cross-env": "^7.0.3",
    "esbuild": "^0.16.16",
    "eslint": "^8.31.0",
    "eslint-config-prettier": "^8.6.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-react": "^7.31.11",
    "husky": "8",
    "lerna": "5",
    "lint-staged": "^13.1.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.8.2",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-native": "^0.70.6",
    "react-native-web": "^0.18.10",
    "rimraf": "^3.0.2",
    "rollup": "^3.9.1",
    "rollup-plugin-esbuild": "^5.0.0",
    "storybook": "next",
    "typescript": "4",
    "vite": "^4.0.4"
  },
  "scripts": {
    "start": "lerna run --parallel start --stream",
    "build": "lerna run --stream 'build:es'",
    "build:watch": "yarn start",
    "storybook": "cross-env STORYBOOK_FONT_URL='' storybook dev -p 7007",
    "build:storybook": "rimraf -rf sbdocs/ && cross-env STORYBOOK_FONT_URL='/design-system' storybook build -o sbdocs/",
    "postbuild": "yarn build:declarations",
    "build:declarations": "lerna run --parallel 'build:declaration'",
    "build:declarations:watch": "rimraf -rf packages/*/dist/*.d.ts && lerna run --parallel 'build:declaration:watch' --stream",
    "yalc:push": "lerna run --parallel 'yalc:push'",
    "yalc:show": "yalc installations show",
    "prebuild": "rimraf -rf packages/*/dist/",
    "lint:ts": "eslint 'packages/**/*.ts{,x}'",
    "lint": "yarn lint:fix:quiet",
    "lint:fix": "yarn lint:ts --fix-dry-run",
    "lint:fix:quiet": "yarn lint:ts --fix --quiet",
    "prettify": "prettier --write ./**/*.{ts,tsx,json} && prettier --write *.{ts,tsx,json}",
    "bootstrap": "yarn build",
    "tsc": "tsc",
    "prepare": "husky install && yarn bootstrap"
  },
  "engines": {
    "node": ">=16"
  },
  "lint-staged": {
    ".{ts,tsx}": [
      "yarn lint",
      "yarn prettify"
    ]
  }
}
