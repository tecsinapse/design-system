{
  "compilerOptions": {
    "noImplicitAny": false,
    "noEmit": true,
    "strict": true,
    "jsx": "react",
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "removeComments": true,
    "paths": {
      "@tecsinapse/*": ["packages/*/src"]
    }
  },
  "include": ["jest-dom/extend-expect"],
  "exclude": ["node_modules", "**/dist/**/*", "**/*.stories.*"],
  "typeRoots": ["./node_modules/@types"]
}
